<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>debug.test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>process-test-classes</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
                <forkMode>once</forkMode>
                <maven.surefire.debug>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
                <jpda.listen>true</jpda.listen>
                <url>jdbc:postgresql://postgres-msi.postgres.database.azure.com:5432/test?sslmode=require&amp;authenticationPluginClassName=com.azure.postgresql.auth.plugin.AzurePostgresqlMSIAuthenticationPlugin</url>
            </properties>
        </action>
    </actions>
